<div id="form-container">
    @(Html.DevExtreme()
        .Form()
        .FormData(Model)
        .ID("form")
        .LabelLocation(FormLabelLocation.Top)
        .MinColWidth(233)
        .ColCount(Mode.Auto)
        .ColCountByScreen(c => c.Md(4).Sm(2))
        .Items(items =>
        {

                    items.AddTabbed()
                        .TabPanelOptions(o =>
                        {
                            o.DeferRendering(false);
                        })
                        .Tabs(tabItems =>
                        {
                            tabItems.Add()
                                .Title("General")
                                .Items(tabItem => tabItem.AddSimple().DataField("Citm"))                                
                                .Items(tabItem => tabItem.AddSimple().DataField("Ditm"));
                            tabItems.Add()
                                .Title("Planning 1")
                                .Items(tabItem => tabItem.AddSimple().DataField("Poor")
                                    .Editor(e => e
                                        .SelectBox()
                                        .DataSource(new string[] {
                                            "Manual",
                                            "Max/Min"}
                                        )
                                        .Value("")
                                    )
                            );
                            tabItems.Add()
                                .Title("Planning 2");
                            tabItems.Add()
                                .Title("Plant Parameters");
                            tabItems.Add()
                                .Title("Sku Groups");
                            tabItems.Add()
                                .Title("Scheduling");
                            tabItems.Add()
                                .Title("Complementary Data");
                            tabItems.Add()
                                .Title("Batch Stock");
                            tabItems.Add()
                                .Title("Consumption History");
                        });

})
    )
</div>

